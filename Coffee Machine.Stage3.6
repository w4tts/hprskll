package machine;
import java.util.Scanner;

public class CoffeeMachine {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        System.out.println("Write how many ml of water the coffee machine has: ");
        int water = scanner.nextInt();
        System.out.println("Write how many ml of milk the coffee machine has: ");
        int milk = scanner.nextInt();
        System.out.println("Write how many grams of coffee beans the coffee machine has: ");
        int beans = scanner.nextInt();
        System.out.println("Write how many cups of coffee you will need: ");
        int cups = scanner.nextInt();
        int waterCounter = water / 200;
        int milkCounter = milk / 50;
        int beansCounter = beans / 15;


        int min = waterCounter;
        if (min> milkCounter){
            min = milkCounter;
        }
        if (min > beansCounter){
            min = beansCounter;
        }



        if (min == 1){
            System.out.println("Yes, I can make that amount of coffee");
        }
        if (min < cups) {
            System.out.println("No, I can make only" + " " + min + " " + "cup(s) of coffee");
        }
        if (min > cups) {
            System.out.println("Yes, I can make that amount of coffee (and even"+ " " + (min - cups) + " " + "more than that)");
        }
        if (water == 0 && milk == 0 && beans == 0 && cups == 0){
            System.out.println("Yes, I can make that amount of coffee");
        }

    }

}
